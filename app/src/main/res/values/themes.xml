<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lupeon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lupeon_primary</item>
        <item name="colorPrimaryVariant">@color/lupeon_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lupeon_secondary</item>
        <item name="colorSecondaryVariant">@color/lupeon_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/lupeon_secondary</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="Theme.Lupeon.Button" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:background">@drawable/background_button_round</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Theme.Lupeon.ButtonDark" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:background">@drawable/background_button_round_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

</resources>