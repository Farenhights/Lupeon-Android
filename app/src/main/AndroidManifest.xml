<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.henriktech.lupeon">

    <application
        android:name=".LupeonApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lupeon">
        <activity android:name=".ui.driver.DriverActivity"></activity>
        <activity android:name=".ui.shipper.ShipperActivity" />
        <activity android:name=".ui.transporter.TransporterActivity" />
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.login.LoginActivity" />
    </application>

</manifest>